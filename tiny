print(f"\nâœ¨ ìµœì¢… ì¶”ì²œ ì§ì—…: {best_job}")
print("ê´€ë ¨ ì „ê³µ:", ", ".join(careers[best_job]["majors"]))
print("í•„ìš” ì„±í–¥:", ", ".join(careers[best_job]["traits"]))
print("ì¶”ì²œ ìê²©ì¦:", ", ".join(careers[best_job]["cert"]))

# TOP 3 ì¶œë ¥
print("\nğŸ”¥ ì¶”ì²œ ì§ì—… TOP 3")
for job, score in sorted_results[:3]:
    print(f"- {job}: {score:.3f}")

# ë¹„ìŠ·í•œ ì§ì—… 3ê°œ(= ì ìˆ˜ ê¸°ì¤€ ë’¤ 3ê°œ)
print("\nğŸ“Œ ë¹„ìŠ·í•œ ì§ì—… 3ê°œ")
for job, score in sorted_results[1:4]:
    print(f"- {job}: {score:.3f}")

# ì „ì²´ ì ìˆ˜ ì¶œë ¥
print("\nğŸ“Š ì „ì²´ ì§ì—… ì ìˆ˜")
for job, score in sorted_results:
    print(f"{job}: {score:.3f}")
