print("--- 1. í”„ë¡œê·¸ë¨ì— ì‚¬ìš©í•  ë°ì´í„° ëª©ë¡ ì •ì˜ ---")

# (1) ì‚°ì—…ê²½ì˜ê³µí•™ê³¼ ì „ì²´ ì „ê³µ ëª©ë¡
all_majors = [
    "ì°½ì˜ì ê³µí•™ì„¤ê³„", "ê¸°ìˆ ê²½ì˜ê°œë¡ ", "ê°ì²´ì§€í–¥í”„ë¡œê·¸ë˜ë°", "ê²½ì œì„±ê³µí•™", "ê³µê¸‰ì‚¬ìŠ¬ê´€ë¦¬", "ë°ì´í„°ë² ì´ìŠ¤", 
    "ê¸°ì´ˆê²½ì˜ê³¼í•™", "ìƒì‚°ìš´ì˜ê´€ë¦¬", "ì‹¤í—˜ê³„íšë²•", "ì¸ê°„ê³µí•™", "ê²½ì˜ì •ë³´ì‹œìŠ¤í…œ", "ê²½ì˜ê³¼í•™ì‘ìš©", 
    "ì„¤ë¹„ê´€ë¦¬", "ì˜ì‚¬ê²°ì •ë¡ ", "ë¹…ë°ì´í„°ë¶„ì„", "ìº¡ìŠ¤í†¤ë””ìì¸", "ì œí’ˆê°œë°œë¡ "
]

# (2) ì‚°ì—…ê²½ì˜ê³µí•™ì— í•„ìš”í•œ ì„±í–¥ ëª©ë¡
all_traits = [
    "ë¶„ì„ì  ì„±í–¥", "ë…¼ë¦¬ì  ì‚¬ê³ ", "ì‹œìŠ¤í…œì  ì‚¬ê³ ", "ë¬¸ì œ í•´ê²° ëŠ¥ë ¥", "ë°ì´í„° ê¸°ë°˜ ì˜ì‚¬ê²°ì •", 
    "ì°½ì˜ì  ì‚¬ê³ ", "ëŒ€ì¸ ì»¤ë®¤ë‹ˆì¼€ì´ì…˜ ë° í˜‘ì—…", "ì‹¤í–‰ë ¥", "ë©”ì´í‚¹"
]

# (3) ì§ì—… ì •ë³´
careers = {
    "ê²½ì˜ ì»¨ì„¤í„´íŠ¸": {"m": ["ê²½ì˜ê³¼í•™ì‘ìš©", "ì˜ì‚¬ê²°ì •ë¡ ", "ê¸°ìˆ ê²½ì˜ê°œë¡ "], "t": ["ë…¼ë¦¬ì  ì‚¬ê³ ", "ë¶„ì„ì  ì„±í–¥", "ì‹œìŠ¤í…œì  ì‚¬ê³ "], "c": ["ADsP", "ê²½ì˜ì§€ë„ì‚¬"], "r": "ë…¼ë¦¬ì  ì‚¬ê³ ì™€ ë¶„ì„ì  ì„±í–¥ì´ ë›°ì–´ë‚˜ê³ , ì˜ì‚¬ê²°ì • ë° ê¸°ìˆ ê²½ì˜ ê³¼ëª©ì— ë†’ì€ ì„ í˜¸ë„ë¥¼ ë³´ì˜€ìŠµë‹ˆë‹¤."},
    "ë¬¼ë¥˜ ê´€ë¦¬ ì „ë¬¸ê°€": {"m": ["ê³µê¸‰ì‚¬ìŠ¬ê´€ë¦¬", "ê¸°ì´ˆê²½ì˜ê³¼í•™", "ìƒì‚°ìš´ì˜ê´€ë¦¬"], "t": ["ì‹œìŠ¤í…œì  ì‚¬ê³ ", "ë¶„ì„ì  ì„±í–¥", "ì‹¤í–‰ë ¥"], "c": ["ë¬¼ë¥˜ê´€ë¦¬ì‚¬", "CPIM(êµ­ì œìê²©ì¦)"], "r": "ì‹œìŠ¤í…œì  ì‚¬ê³ ë ¥ì´ ê°•í•˜ê³  ê³µê¸‰ì‚¬ìŠ¬ê´€ë¦¬ ë° ìƒì‚°ìš´ì˜ ê´€ë ¨ ê³¼ëª©ì— ëŒ€í•œ ì„ í˜¸ë„ì™€ ì„±ì·¨ë„ê°€ ë†’ìŠµë‹ˆë‹¤."},
    "ì‚°ì—…ê³µí•™ê¸°ìˆ ì": {"m": ["ìƒì‚°ìš´ì˜ê´€ë¦¬", "ì¸ê°„ê³µí•™", "ì„¤ë¹„ê´€ë¦¬"], "t": ["ë¬¸ì œ í•´ê²° ëŠ¥ë ¥", "ì‹¤í–‰ë ¥", "ë©”ì´í‚¹"], "c": ["ì‚°ì—…ì•ˆì „ê¸°ì‚¬", "ê³µì¥ê´€ë¦¬ê¸°ìˆ ì‚¬"], "r": "ìƒì‚° ê³µì • ê°œì„  ë° ì„¤ë¹„ ê´€ë¦¬ì— ëŒ€í•œ ì„ í˜¸ë„ê°€ ë†’ìœ¼ë©°, ì‹¤ì œ ì‹œìŠ¤í…œì„ ë§Œë“œëŠ” ì‹¤í–‰ë ¥ê³¼ ë¬¸ì œ í•´ê²° ëŠ¥ë ¥ì´ ìš°ìˆ˜í•©ë‹ˆë‹¤."},
    "ì •ë³´ì‹œìŠ¤í…œìš´ì˜ì": {"m": ["ê²½ì˜ì •ë³´ì‹œìŠ¤í…œ", "ë°ì´í„°ë² ì´ìŠ¤", "ê°ì²´ì§€í–¥í”„ë¡œê·¸ë˜ë°"], "t": ["ë…¼ë¦¬ì  ì‚¬ê³ ", "ë°ì´í„° ê¸°ë°˜ ì˜ì‚¬ê²°ì •", "ë¶„ì„ì  ì„±í–¥"], "c": ["ì •ë³´ì²˜ë¦¬ê¸°ì‚¬", "SQLD"], "r": "IT ì‹œìŠ¤í…œ, ë°ì´í„°ë² ì´ìŠ¤, í”„ë¡œê·¸ë˜ë°ì— ê´€ì‹¬ì´ ë§ê³ , ë…¼ë¦¬ì  ë¶„ì„ì„ í†µí•´ ì‹œìŠ¤í…œì„ ì•ˆì •ì ìœ¼ë¡œ ìš´ì˜í•˜ëŠ” ëŠ¥ë ¥ì´ ìˆìŠµë‹ˆë‹¤."},
    "í’ˆì§ˆê´€ë¦¬ì‚¬ë¬´ì›": {"m": ["ì‹¤í—˜ê³„íšë²•", "ìƒì‚°ìš´ì˜ê´€ë¦¬"], "t": ["ë¶„ì„ì  ì„±í–¥", "ë…¼ë¦¬ì  ì‚¬ê³ ", "ë°ì´í„° ê¸°ë°˜ ì˜ì‚¬ê²°ì •"], "c": ["í’ˆì§ˆê²½ì˜ê¸°ì‚¬", "6ì‹œê·¸ë§ˆ ìê²©"], "r": "ì‹¤í—˜ê³„íšë²•ì„ ë¹„ë¡¯í•œ í†µê³„/ë¶„ì„ ê³¼ëª©ì— ìš°ìˆ˜í•˜ë©°, ê°ê´€ì ì¸ ë°ì´í„° ê¸°ë°˜ìœ¼ë¡œ í’ˆì§ˆì„ ê´€ë¦¬í•˜ëŠ” ëŠ¥ë ¥ì´ íƒì›”í•©ë‹ˆë‹¤."},
    # ... (ì§ì—… ë°ì´í„° ìƒëµ)
}


# ------------------------------------------------
# 2. ì‚¬ìš©ì ì…ë ¥ ë° ìœ íš¨ì„± ê²€ì‚¬ (User Input & Validation)
# ------------------------------------------------
print("\n--- 2. ì‚¬ìš©ì ì •ë³´ ì…ë ¥ ---")

# (1) ì¤‘ìš”ë„(ê°€ì¤‘ì¹˜) ì…ë ¥: ì¬ì…ë ¥ ë£¨í”„ ì¶”ê°€ ğŸ› ï¸
WEIGHT_MAJOR = 0
WEIGHT_TRAIT = 0
WEIGHT_A_GRADE = 0

print("\n[A] ê° í•­ëª©ì˜ ì¤‘ìš”ë„ë¥¼ 1~5ì  ì‚¬ì´ì˜ ì •ìˆ˜ë¡œ ì…ë ¥í•´ ì£¼ì„¸ìš”.")

while True: # ğŸ’¥ ë¬´í•œ ë°˜ë³µ ì‹œì‘ (ì˜¬ë°”ë¥¸ ì…ë ¥ì´ ë‚˜ì˜¬ ë•Œê¹Œì§€ ê³„ì†í•©ë‹ˆë‹¤)
    try:
        # ì…ë ¥ë°›ê¸° ì‹œë„
        WEIGHT_MAJOR = int(input("ì „ê³µ ì„ í˜¸ë„ ì¤‘ìš”ë„: "))
        WEIGHT_TRAIT = int(input("ì„±í–¥ ì¼ì¹˜ë„ ì¤‘ìš”ë„: "))
        WEIGHT_A_GRADE = int(input("A0 ì´ìƒ ê³¼ëª© ì¤‘ìš”ë„: "))

        # ğŸ’¥ ë²”ìœ„ í™•ì¸: ì…ë ¥ëœ ì„¸ ê°’ì´ ëª¨ë‘ 1ë³´ë‹¤ í¬ê±°ë‚˜ ê°™ê³ (>=) 5ë³´ë‹¤ ì‘ê±°ë‚˜ ê°™ì€ì§€ í™•ì¸
        if not (WEIGHT_MAJOR >= 1 and WEIGHT_MAJOR <= 5 and 
                WEIGHT_TRAIT >= 1 and WEIGHT_TRAIT <= 5 and 
                WEIGHT_A_GRADE >= 1 and WEIGHT_A_GRADE <= 5):
            
            print("\nâŒ ì˜¤ë¥˜: ì¤‘ìš”ë„ëŠ” ë°˜ë“œì‹œ 1ì—ì„œ 5 ì‚¬ì´ì˜ ì •ìˆ˜ì—¬ì•¼ í•©ë‹ˆë‹¤. ë‹¤ì‹œ ì…ë ¥í•´ ì£¼ì„¸ìš”.")
            # ìˆ«ìëŠ” ë§ì§€ë§Œ ë²”ìœ„ê°€ í‹€ë ¸ìœ¼ë¯€ë¡œ, while ë£¨í”„ë¥¼ ë‹¤ì‹œ ì‹œì‘í•©ë‹ˆë‹¤.
            continue 
        
        # ğŸ’¥ ëª¨ë“  ê²€ì‚¬ë¥¼ í†µê³¼í–ˆë‹¤ë©´
        break # while ë°˜ë³µë¬¸ì„ ëë‚´ê³  ë‹¤ìŒ ë‹¨ê³„ë¡œ ë„˜ì–´ê°‘ë‹ˆë‹¤.

    except:
        # ğŸ’¥ ìˆ«ìê°€ ì•„ë‹Œ ë¬¸ì ë“±ì„ ì…ë ¥í–ˆì„ ë•Œ ì˜¤ë¥˜ë¥¼ ì¡ìŠµë‹ˆë‹¤.
        print("\nâŒ ì˜¤ë¥˜: ìˆ«ìë¥¼ ì…ë ¥í•´ì•¼ í•©ë‹ˆë‹¤. ë‹¤ì‹œ ì…ë ¥í•´ ì£¼ì„¸ìš”.")
        # continueëŠ” ìƒëµí•´ë„ while True ë•Œë¬¸ì— ë‹¤ì‹œ ì‹œì‘í•˜ì§€ë§Œ, ëª…í™•í•˜ê²Œ í‘œì‹œí•©ë‹ˆë‹¤.
        continue 
        
print(f"\nâ†’ ìµœì¢… ì¤‘ìš”ë„: ì „ê³µ {WEIGHT_MAJOR}, ì„±í–¥ {WEIGHT_TRAIT}, A0 {WEIGHT_A_GRADE}")

# (2) ì „ê³µ ì„ í˜¸ë„ ì…ë ¥ (ìƒëµ - ê¸°ì¡´ ì½”ë“œì™€ ë™ì¼)
print("\n[B] ì „ê³µ ê³¼ëª©ë³„ ì„ í˜¸ë„ë¥¼ 1~5ì (5ì ì´ ìµœê³ )ìœ¼ë¡œ ì…ë ¥í•˜ì„¸ìš”.")
major_scores = {}
for m in all_majors:
    score = 0
    while True:
        try:
            score = int(input(f"'{m}' ì„ í˜¸ë„ (1~5): "))
            if score >= 1 and score <= 5: 
                major_scores[m] = score
                break
            else:
                print("1ì—ì„œ 5 ì‚¬ì´ì˜ ìˆ«ìë¥¼ ì…ë ¥í•´ì•¼ í•©ë‹ˆë‹¤.")
        except:
            print("ìˆ«ìë¥¼ ì…ë ¥í•´ì•¼ í•©ë‹ˆë‹¤.")


# (3) ì„±í–¥ ì…ë ¥ (ìƒëµ - ê¸°ì¡´ ì½”ë“œì™€ ë™ì¼)
traits = []
print("\n[C] ë‹¹ì‹ ì˜ ì„±í–¥ì„ ì‰¼í‘œë¡œ êµ¬ë¶„í•˜ì—¬ ì…ë ¥í•˜ì„¸ìš”.")
print(f"ê°€ëŠ¥í•œ ì„±í–¥: {', '.join(all_traits)}")
while True:
    input_text = input("ì…ë ¥: ")
    input_list = input_text.split(",") 
    invalid_found = False
    temp_traits = []
    for item in input_list:
        item = item.strip()
        if not (item in all_traits):
            if item != "":
                print(f"   âŒ ì˜¤ë¥˜: '{item}'ì€ ëª©ë¡ì— ì—†ëŠ” ì„±í–¥ì´ê±°ë‚˜ ì˜¤íƒ€ì…ë‹ˆë‹¤.")
                invalid_found = True
        else:
            temp_traits.append(item)
    if invalid_found == True:
        print("   ëª©ë¡ì„ ë‹¤ì‹œ í™•ì¸í•˜ê³  ì •í™•í•˜ê²Œ ì…ë ¥í•´ ì£¼ì„¸ìš”.\n")
        continue
    if len(temp_traits) > 0:
        traits = temp_traits
        break
    else:
        print("   âŒ ì˜¤ë¥˜: ì„±í–¥ì„ í•˜ë‚˜ ì´ìƒ ì •í™•í•˜ê²Œ ì…ë ¥í•´ì•¼ í•©ë‹ˆë‹¤.\n")


# (4) A0 ì´ìƒ ê³¼ëª© ì…ë ¥ (ìƒëµ - ê¸°ì¡´ ì½”ë“œì™€ ë™ì¼)
a_grade = []
print("\n[D] A0 ì´ìƒ ë°›ì€ ì „ê³µ ê³¼ëª©ì„ ì‰¼í‘œë¡œ êµ¬ë¶„í•˜ì—¬ ì…ë ¥í•˜ì„¸ìš”.")
while True:
    input_text = input("ì…ë ¥: ")
    input_list = input_text.split(",")
    invalid_found = False
    temp_a_grade = []
    for item in input_list:
        item = item.strip()
        if not (item in all_majors):
            if item != "":
                print(f"   âŒ ì˜¤ë¥˜: '{item}'ì€ ì „ê³µ ëª©ë¡ì— ì—†ëŠ” ê³¼ëª©ì´ê±°ë‚˜ ì˜¤íƒ€ì…ë‹ˆë‹¤.")
                invalid_found = True
        else:
            temp_a_grade.append(item)
    if invalid_found == True:
        print("   ëª©ë¡ì„ ë‹¤ì‹œ í™•ì¸í•˜ê³  ì •í™•í•˜ê²Œ ì…ë ¥í•´ ì£¼ì„¸ìš”.\n")
        continue
    if len(temp_a_grade) > 0:
        a_grade = temp_a_grade
        break
    else:
        print("   âŒ ì˜¤ë¥˜: A0 ê³¼ëª©ì„ í•˜ë‚˜ ì´ìƒ ì •í™•í•˜ê²Œ ì…ë ¥í•´ ì£¼ì„¸ìš”.\n")


# ------------------------------------------------
# 3. ì ìˆ˜ ê³„ì‚° ë° 4. ê²°ê³¼ ì¶œë ¥ (ìƒëµ - ê¸°ì¡´ ì½”ë“œì™€ ë™ì¼)
# ------------------------------------------------
print("\n--- 3. ëª¨ë“  ì§ì—…ì˜ ì ìˆ˜ ê³„ì‚° ì‹œì‘ ---")

results = {} 
for job_name, job_info in careers.items():
    print(f"\n[ê³„ì‚°] {job_name} ì§ì—…ì— ëŒ€í•œ ì ìˆ˜ë¥¼ ê³„ì‚°í•©ë‹ˆë‹¤.")
    current_score = 0
    
    # A) ì „ê³µ ì„ í˜¸ë„ ì ìˆ˜ ê³„ì‚°
    major_score_sum = 0
    required_majors = job_info["m"]
    for required_m in required_majors:
        if required_m in major_scores:
            score = major_scores[required_m]
            major_score_sum = major_score_sum + score
            print(f"   - ì „ê³µ '{required_m}': ì„ í˜¸ë„ {score}ì  ì¶”ê°€.")
    score_part1 = major_score_sum * WEIGHT_MAJOR
    current_score = current_score + score_part1
    print(f"   -> ì „ê³µ ì ìˆ˜ ì´í•© ({major_score_sum}) * ì¤‘ìš”ë„ ({WEIGHT_MAJOR}) = {score_part1}ì ")

    # B) ì„±í–¥ ì¼ì¹˜ ì ìˆ˜ ê³„ì‚°
    trait_match_count = 0
    required_traits = job_info["t"]
    for required_t in required_traits:
        if required_t in traits:
            trait_match_count = trait_match_count + 1
            print(f"   - ì„±í–¥ '{required_t}': ì¼ì¹˜ (+1ì ).")
    score_part2 = trait_match_count * WEIGHT_TRAIT
    current_score = current_score + score_part2
    print(f"   -> ì„±í–¥ ì¼ì¹˜ ê°œìˆ˜ ({trait_match_count}) * ì¤‘ìš”ë„ ({WEIGHT_TRAIT}) = {score_part2}ì ")

    # C) A0 ê³¼ëª© ì¼ì¹˜ ì ìˆ˜ ê³„ì‚°
    a_match_count = 0
    for a_item in a_grade:
        if a_item in required_majors:
            a_match_count = a_match_count + 1
            print(f"   - A0 ê³¼ëª© '{a_item}': ì¼ì¹˜ (+1ì ).")
    score_part3 = a_match_count * WEIGHT_A_GRADE
    current_score = current_score + score_part3
    print(f"   -> A0 ì¼ì¹˜ ê°œìˆ˜ ({a_match_count}) * ì¤‘ìš”ë„ ({WEIGHT_A_GRADE}) = {score_part3}ì ")
    
    results[job_name] = current_score
    print(f"   => ìµœì¢… ì ìˆ˜: {current_score}ì ")


print("\n" + "="*50)
print("           --- 4. ìµœì¢… ì¶”ì²œ ê²°ê³¼ ---")
print("="*50)

# (1) ê°€ì¥ ë†’ì€ ì ìˆ˜ë¥¼ ì°¾ê¸° ë° (2) ê²°ê³¼ ì •ë ¬
best_job = ""
max_score = -1 
sorted_list = []
for job_name, score in results.items():
    sorted_list.append((score, job_name))
    if score > max_score:
        max_score = score
        best_job = job_name
sorted_list.sort(reverse=True)

# (3) ìµœì¢… ì¶”ì²œ ì§ì—… ì •ë³´ ì¶œë ¥
if best_job:
    best_info = careers[best_job]
    print(f"\nâœ¨ ìµœì¢… ì¶”ì²œ ì§ì—…: **{best_job}** (ìµœê³  ì ìˆ˜: {max_score})")
    print("-" * 35)
    print(f"ğŸ“Œ **ì í•© ì´ìœ **: {best_info['r']}")
    print("-" * 35)
    print("âœ… ê´€ë ¨ í•µì‹¬ ì „ê³µ:", ", ".join(best_info["m"]))
    print("ğŸ’¡ í•„ìš” ì„±í–¥:", ", ".join(best_info["t"]))
    print("ğŸ“œ ì¶”ì²œ ìê²©ì¦:", ", ".join(best_info["c"]))
else:
    print("\nì¶”ì²œ ê²°ê³¼ë¥¼ ê³„ì‚°í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ì§ì—… ì •ë³´ë¥¼ í™•ì¸í•´ ì£¼ì„¸ìš”.")

# (4) ì „ì²´ ìˆœìœ„ ì¶œë ¥
print("\nğŸ”¥ ì „ì²´ ì§ì—… ìˆœìœ„ (ì ìˆ˜ ë†’ì€ ìˆœ)")
for rank, (score, job_name) in enumerate(sorted_list):
    print(f"  {rank + 1}ìœ„. {job_name}: {score}ì ")
